{
  "build": {
    "env": {
      "PYTHON_VERSION": "3.12"
    },
    "nixpacks": {
      "phases": {
        "setup": {
          "nixPkgs": ["python312", "gcc", "python3Packages.setuptools"]
        },
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT"
  }
}
